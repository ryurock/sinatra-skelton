.row
  .col-lg-4.col-lg-offset-4
    .well
      form.form-horizontal method="post" action="/auth/join"
        .alert.alert-dismissible.alert-danger
          button.close type="button" data-dismiss="alert" Ã—
          | #{{@errors[:error]}}
        fieldset
          .form-group
            div.col-lg-12
              input.form-control#inputUsername placeholder="#{{t.site.signup_username_place_holder}}" type="text" autocomplete="off" name="username"
          .form-group
            div.col-lg-12
              input.form-control#inputEmail placeholder="#{{t.site.signup_email_place_holder}}" type="text" autocomplete="off" name="email"
          .form-group
            div.col-lg-12
              input.form-control#inputPassword placeholder="#{{t.site.signup_password_place_holder}}" type="password" autocomplete="off" name="password"
          .form-group
            div.col-lg-12
              button.btn.btn-success.btn-block type="submit"
                | #{{t.site.signup_btn}}

